<!-- Dropdown Structure -->
<ul id="account-dropdown" class="dropdown-content">
  <% if current_user.present? %>
    <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
  <% else %>
    <li><%= link_to "Sign in", new_user_session_path %></li>
    <li><%= link_to "Sign up", new_user_registration_path %></li>
  <% end %>
</ul>

<nav class="top-nav">
  <div class="container">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">DuckCI</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><%= link_to "Create Project", new_project_path %></li>
        <li><%= link_to "Add Node", new_machine_path %></li>

        <li>
          <% if current_user.present? %>
            <a class="dropdown-button" href="#!" data-activates="account-dropdown"><%= current_user.email %><i class="mdi-navigation-arrow-drop-down right"></i></a>
          <% else %>
            <a class="dropdown-button" href="#!" data-activates="account-dropdown"><i class="mdi-social-person"></i></a>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>
