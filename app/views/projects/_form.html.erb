<%= form_for @project do |f| %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :name, value: @project.name, id: "name", class: "validate #{@project.errors.blank? ? '' : 'invalid'}" %>
      <label for="name">Name</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :uri, value: @project.uri, id: "uri", class: "validate" %> 
      <label for="uri">Repository URI</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :docker_uri, value: @project.docker_uri, id: "docker_uri", class: "validate" %> 
      <label for="docker_uri">Docker URI</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :branch, value: @project.branch, id: "branch", class: "validate" %> 
      <label for="branch">Branch to track</label>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.text_area :script, value: @project.script, id: "script", class: "materialize-textarea" %> 
      <label for="script">Build script</label>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="mdi-content-send right"></i>
      </button>
    </div>
  </div>

<% end %>


